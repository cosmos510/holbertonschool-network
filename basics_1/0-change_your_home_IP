#!/usr/bin/env bash
# Bash script that configures an Ubuntu server

# Backup the original /etc/hosts file
cp /etc/hosts /etc/hosts.bak

# Add or modify localhost resolution
# Remove any existing 'localhost' entry to avoid conflicts
sed -i '/\slocalhost$/d' /etc/hosts
# Add the new localhost entry
echo "127.0.0.2 localhost" >> /etc/hosts

# Add or modify facebook.com resolution
# Remove any existing 'facebook.com' entry to avoid conflicts
sed -i '/facebook.com$/d' /etc/hosts
# Add the new facebook.com entry
echo "8.8.8.8 facebook.com" >> /etc/hosts
